super + Return
	  	alacritty

super + w
		waterfox-g4

super + e
		emacsclient -c

super + z
		zathura

super + p
		dmenu_run -x 0 -y 0 -z 1680

XF86Audio{RaiseVolume,LowerVolume,Mute}
		pamixer {-i 2,-d 2,-t}

Print
		escrotum -s ~/Pictures/screenshots/%Y_%m_%d_%H:%M:%S.png

super + Print
		escrotum ~/Pictures/screenshots/%Y_%m_%d_%H:%M:%S.png

super + F12
		systemctl suspend

# lookup words
super + ctrl + d
	  ~/.scripts/word-lookup.sh

# make sxhkd reload its configuration files:
super + F1
	  pkill -USR1 -x sxhkd